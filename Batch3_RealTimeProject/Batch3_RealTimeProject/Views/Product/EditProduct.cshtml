@model Product
<h1>Edit Product</h1>

<form method="post">
    <fieldset>
        @Html.HiddenFor(m => m.Id)
        <div>
            <label for="exampleInputEmail1" class="form-label mt-4">Title</label>
            @Html.TextBoxFor(m => m.Title, new { @class = "form-control" })
        </div>
        <div>
            <label for="exampleInputPassword1" class="form-label mt-4">ISBN</label>
            @Html.TextBoxFor(m => m.ISBN, new { @class = "form-control" })
        </div>

        <div>
            <label for="exampleTextarea" class="form-label mt-4">Author</label>
            @Html.TextAreaFor(m => m.Author, new { @class = "form-control" })
        </div>
        <div>
            <label for="exampleTextarea" class="form-label mt-4">Price</label>
            @Html.TextAreaFor(m => m.Price, new { @class = "form-control" })
        </div>
        <div>
            <label for="exampleTextarea" class="form-label mt-4">Description</label>
            @Html.TextAreaFor(m => m.Description, new { @class = "form-control" })
        </div>
        <div>
            <label for="exampleTextarea" class="form-label mt-4">NumberOfPages</label>
            @Html.TextAreaFor(m => m.NumberOfPages, new { @class = "form-control" })
        </div>
        <div>
            <label for="exampleTextarea" class="form-label mt-4">CategoryId</label>
            @Html.TextAreaFor(m => m.CategoryId, new { @class = "form-control" })
        </div>

        <button type="submit" class="btn btn-primary">Edit Product</button>
    </fieldset>
</form>