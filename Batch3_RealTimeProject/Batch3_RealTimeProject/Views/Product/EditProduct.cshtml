@model Product
<div class="card shadow border-0 mt-4">
    <div class="card-header bg-secondary bg-gradient ml-0 py-3">
        <div class="row">
            <div class="col-12 text-center">
                <h2 class="text-white py-2">Edit Product</h2>
            </div>
        </div>
    </div>
    <div class="card-body p-4">
        <form method="post">
            <input asp-for="Id" hidden />
            <div class="border p-3 mt-4">
                @*<div asp-validation-summary="ModelOnly"></div>*@
                <div class="form-floating py-2 col-12">
                    <input asp-for="Title" class="form-control border-0 " />
                    <label asp-for="Title" class="ms-2"></label>

                </div>
                <div class="form-floating py-2 col-12">
                    <input asp-for="ISBN" class="form-control border-0 " />
                    <label asp-for="ISBN" class="ms-2"></label>

                </div>
                 <div class="form-floating py-2 col-12">
                    <input asp-for="Author" class="form-control border-0 " />
                    <label asp-for="Author" class="ms-2"></label>

                </div>
                 <div class="form-floating py-2 col-12">
                    <input asp-for="Price" class="form-control border-0 " />
                    <label asp-for="Price" class="ms-2"></label>

                </div>
                 <div class="form-floating py-2 col-12">
                    <input asp-for="Description" class="form-control border-0 " />
                    <label asp-for="Description" class="ms-2"></label>

                </div>
                 <div class="form-floating py-2 col-12">
                    <input asp-for="NumberOfPages" class="form-control border-0 " />
                    <label asp-for="NumberOfPages" class="ms-2"></label>

                </div>
                
                <div class="form-floating py-2 col-12">
                    <select asp-for="CategoryId" asp-items="ViewBag.CategoryList"  class="form-select border-0 ">
                        <option>--SELECT CATEGORY--</option>
                    </select>
                </div>

                <div class="row mt-3">
                    <div class="col-6 col-md-3">
                        <button type="submit" class="btn btn-primary form-control">Update</button>
                    </div>
                    <div class="col-6 col-md-3">
                        <a asp-controller="Product" asp-action="ShowProductList" class="btn btn-secondary border  form-control">
                            Back to List
                        </a>
                    </div>
                </div>


            </div>
        </form>
    </div>
</div>


@section Scripts {
    @{
                <partial name="_ValidationScriptsPartial" />
    }
}