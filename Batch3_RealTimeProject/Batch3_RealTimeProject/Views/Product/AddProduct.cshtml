@model Product

<div class="card shadow border-0 mt-4">
    <div class="card-header bg-secondary bg-gradient ml-0 py-3">
        <div class="row">
            <div class="col-12 text-center">
                <h2 class="text-white py-2">Create Product</h2>
            </div>
        </div>
    </div>
    <div class="card-body p-4">
        <form method="post" class="row">
            <div class="border p-3">
                @*<div asp-validation-summary="ModelOnly"></div>*@
                <div class="form-floating py-2 col-12">
                    <input asp-for="Title" class="form-control border-0 " />
                    <label asp-for="Title" class="ms-2"></label>

                </div>
                <div class="form-floating py-2 col-12">
                    <input asp-for="ISBN" class="form-control border-0 " />
                    <label asp-for="ISBN" class="ms-2"></label>

                </div>
                 <div class="form-floating py-2 col-12">
                    <input asp-for="Author" class="form-control border-0 " />
                    <label asp-for="Author" class="ms-2"></label>

                </div>
                 <div class="form-floating py-2 col-12">
                    <input asp-for="Price" class="form-control border-0 " />
                    <label asp-for="Price" class="ms-2"></label>

                </div>
                 <div class="form-floating py-2 col-12">
                    <input asp-for="Description" class="form-control border-0 " />
                    <label asp-for="Description" class="ms-2"></label>

                </div>
                 <div class="form-floating py-2 col-12">
                    <input asp-for="NumberOfPages" class="form-control border-0 " />
                    <label asp-for="NumberOfPages" class="ms-2"></label>

                </div>
                 <div class="form-floating py-2 col-12">
                    <input asp-for="CategoryId" class="form-control border-0 " />
                    <label asp-for="CategoryId" class="ms-2"></label>

                </div>


                <div class="row pt-2">
                    <div class="col-6 col-md-3">
                        <button type="submit" class="btn btn-primary form-control">Create</button>
                    </div>
                    <div class="col-6 col-md-3">
                        <a asp-controller="Product" asp-action="ShowProductList" class="btn btn-outline-primary border  form-control">
                            Back to List
                        </a>
                    </div>
                </div>


            </div>
        </form>
    </div>
</div>




@section Scripts {
    @{
                <partial name="_ValidationScriptsPartial" />
    }
}