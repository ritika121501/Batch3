@model IEnumerable<Product>

<div class="row pb-3">
    @foreach (var product in Model)
    {
        <div class="col-lg-3 col-sm-6">
            <div class="row p-2">
                <div class="col-12 p-1">
                    <div class="card border-0 p-3 shadow  border-top border-5 rounded">
                        @if (product.ProductImageUrl != null && product.ProductImages != null)
                        {
                            @if (product.ProductImages.Count() > 0)
                            {
                                <img src="@product.ProductImages.FirstOrDefault().ImageUrl" class="card-img-top rounded" />
                            }
                        }
                        else
                        {
                            <img src="https://placehold.co/500x600/png" class="card-img-top rounded" />
                        }
                        <div id="carouselExampleSlidesOnly" class="carousel slide" data-ride="carousel">
                            <div class="carousel-inner">
                                @foreach (var image in Model)
                                {
                                    <div class="carousel-item active">
                                        <img class="d-block w-100" src="@image.ProductImages" alt="First slide">
                                    </div>
                                }

                            </div>
                        </div>

                        <div class="card-body pb-0">
                            <div class="pl-1">
                                <p class="card-title h5  opacity-75 text-uppercase text-center">@product.Title</p>
                                <p class="card-title text-warning text-center">by <b>@product.Author</b></p>
                            </div>
                            <div class="pl-1">
                                <p class="text-opacity-75 text-center mb-0">
                                    List Price:
                                    <span>
                                        @product.Price.ToString("c")
                                    </span>
                                </p>
                            </div>

                        </div>
                        <div>
                            <a asp-action="Details"
                               asp-route-productId="@product.Id"
                               class="btn btn-primary bg-gradient border-0 form-control">
                                Details
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    }
</div>