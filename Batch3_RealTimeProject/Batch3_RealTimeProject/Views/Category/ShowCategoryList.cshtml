@model List<Category>
<!DOCTYPE html>
<html>
<head>
    <style>
        table {
            font-family: arial, sans-serif;
            border-collapse: collapse;
            width: 100%;
        }

        td, th {
            border: 1px solid #dddddd;
            text-align: left;
            padding: 8px;
        }

        tr:nth-child(even) {
            background-color: #dddddd;
        }
    </style>
</head>
<body>

    <h2>Category Table</h2>
    <a type="button" class="btn btn-primary" asp-controller="Category" asp-action="AddCategory">AddCategory</a>
    <table>
        <tr>
            <th>CategoryId</th>
            <th>CategoryDescription</th>
            <th>CategoryName</th>
        </tr>

        @foreach (var i in Model)
        {
            <tr>
                <td>@Html.DisplayFor(m => i.CategoryId)</td>
                <td>@Html.DisplayFor(m => i.CategoryDescription)</td>
                <td>@Html.DisplayFor(m => i.CategoryName)</td>
                <td>
                    <a asp-controller="Category" asp-action="EditCategory" asp-route-id="@i.CategoryId">
                        <i class="bi bi-pencil-square"></i>
                        Edit
                    </a>
                </td>
            </tr>
        }


    </table>

</body>
</html>

